<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_stroke"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recyclerViewLayout_rowsScreen_emailName"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email name" />

    <ImageView
        android:id="@+id/recyclerViewLayout_rowsScreen_imageView"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/recyclerViewLayout_rowsScreen_usersText"
        android:paddingStart="5dp"
        android:paddingBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="users text"
        android:textColor="#475B8E"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>